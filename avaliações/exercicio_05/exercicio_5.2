#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int numero_secreto, chute;

    // Inicializa o gerador de números aleatórios
    srand(time(NULL));

    // Gera um número aleatório entre 1 e 100
    numero_secreto = rand() % 100 + 1;

    printf("Tente adivinhar o número entre 1 e 100!\n");

    while (1) {
        printf("Digite seu chute (-1 para sair): ");
        scanf("%d", &chute);

        if (chute == -1) {
            printf("Você desistiu! O número era %d.\n", numero_secreto);
            break;
        }

        if (chute < 1 || chute > 100) {
            printf("Chute inválido! Tente novamente.\n");
            continue;
        }

        if (chute == numero_secreto) {
            printf("Parabéns! Você acertou o número!\n");
            break;
        } else if (chute < numero_secreto) {
            printf("O número é maior que %d. Tente novamente.\n", chute);
        } else {
            printf("O número é menor que %d. Tente novamente.\n", chute);
        }
    }

    return 0;
}